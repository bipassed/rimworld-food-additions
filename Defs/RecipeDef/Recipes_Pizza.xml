<Defs>

    <!-- Dough -->
    <RecipeDef ParentName="CookMealFineBase">
        <defName>RAT_PreparePizzaDough</defName>
        <label>prepare pizza dough</label>
        <description>Prepare pizza dough.</description>
        <jobString>Preparing pizza dough.</jobString>
        <workAmount>500</workAmount>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>VCE_Flour</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <RAT_PizzaDough>2</RAT_PizzaDough>
        </products>
        <recipeUsers>
            <li>ElectricStove</li>
            <li>FueledStove</li>
        </recipeUsers>
    </RecipeDef>

