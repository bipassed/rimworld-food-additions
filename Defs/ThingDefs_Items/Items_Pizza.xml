<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <!-- Dough -->
    <ThingDef ParentName="OrganicProductBase">
        <defName>RAT_PizzaDough</defName>
        <label>pizza dough</label>
        <description>Pizza dough.</description>
        <graphicData>
            <texPath>Things/Item/Pizza/PizzaDough</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <Nutrition>0.5</Nutrition>
            <Mass>0.045</Mass>
            <MaxHitPoints>60</MaxHitPoints>
            <Flammability>0.2</Flammability>
            <MarketValue>1.9</MarketValue>
        </statBases>
        <ingestible>
            <preferability>DesperateOnly</preferability>
            <foodType>AnimalProduct</foodType>
        </ingestible>
        <comps>
            <li Class="CompProperties_Rottable">
                <daysToRotStart>14</daysToRotStart>
                <rotDestroys>true</rotDestroys>
            </li>
        </comps>
        <thingCategories>
            <li>AnimalProductRaw</li>
        </thingCategories>
    </ThingDef>

    <!-- Pizza -->
    <ThingDef ParentName="MealFineBase">
        <defName>RAT_MealPepperoniPizza</defName>
        <label>pepperoni pizza</label>
        <description>A carefully crafted pizza, skillfully assembled with a variety of ingredients.</description>
        <graphicData>
            <texPath>Things/Item/Pizza/Pepperoni</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <comps>
            <li Class="CompProperties_Ingredients">
                <splitTransferableFoodKind>true</splitTransferableFoodKind>
            </li>
        </comps>
        <ingestible>
            <tasteThought>RAT_AtePepperoniPizza</tasteThought>
        </ingestible>
    </ThingDef>

</Defs>