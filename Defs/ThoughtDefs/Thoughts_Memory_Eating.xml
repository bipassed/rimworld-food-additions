<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <!-- Pizzas -->
    <ThoughtDef>
        <defName>RAT_AtePepperoniPizza</defName>
        <durationDays>1</durationDays>
        <stages>
            <li>
                <label>ate pepperoni pizza</label>
                <description>I ate a really pepperoni pizza. Yum!</description>
                <baseMoodEffect>7</baseMoodEffect>
            </li>
        </stages>
        <replaceThoughts>
            <li>AteLavishMeal</li>
        </replaceThoughts>
    </ThoughtDef>

    <!-- Cannibal Meals -->
    <ThoughtDef>
        <defName>RAT_AteCannibalMealSimple</defName>
        <durationDays>1</durationDays>
        <stages>
            <li>
                <label>ate simple cannibal meal</label>
                <description>I ate a simple cannibal meal</description>
                <baseMoodEffect>5</baseMoodEffect>
            </li>
        </stages>
        <requiredTraits>
            <li>Cannibal</li>
        </requiredTraits>
    </ThoughtDef>

    <ThoughtDef>
        <defName>RAT_AteCannibalMealFine</defName>
        <durationDays>1</durationDays>
        <stages>
            <li>
                <label>ate fine cannibal meal</label>
                <description>I ate a fine cannibal meal</description>
                <baseMoodEffect>10</baseMoodEffect>
            </li>
        </stages>
        <requiredTraits>
            <li>Cannibal</li>
        </requiredTraits>
    </ThoughtDef>

    <ThoughtDef>
        <defName>RAT_AteCannibalMealLavish</defName>
        <durationDays>1</durationDays>
        <stages>
            <li>
                <label>ate lavish cannibal meal</label>
                <description>I ate a lavish cannibal meal</description>
                <baseMoodEffect>15</baseMoodEffect>
            </li>
        </stages>
        <requiredTraits>
            <li>Cannibal</li>
        </requiredTraits>
    </ThoughtDef>

</Defs>